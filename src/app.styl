.container
  min-height: 100%
  display: flex
  flex-direction: column
  align-items: center
  justify-content: flex-start
  box-sizing: border-box
  view
    box-sizing: border-box

.tac
  text-align: center

.text-overflow
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

page
  height: 100%
  margin: 0
  padding: 0
  font-size: 16px
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif


.page
  min-height: 100%
  background-color: #f8f8f8
  font-size: 16px
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif

image
  max-width: 100%
  max-height: 100%

.flex
  display: flex
  align-items: center

.fadeIn
  animation: fadeIn 0.3s

.slideIn
  animation: slideIn 0.3s

.scaleIn
  animation: scaleIn 0.3s

@keyframes scaleIn
  0%
    transform: translate(0, -50%) scale(0.5)

  100%
    transform: translate(0, -50%) scale(1)

@keyframes slideIn
  0%
    transform: translateY(-100%)

  100%
    transform: translateY(0)

@keyframes fadeIn
  0%
    opacity: 0

  100%
    opacity: 1

.w100
  width: 100% !important
